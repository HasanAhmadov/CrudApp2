@model IEnumerable<CrudApp2.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Order</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Car Brand</th>
            <th>Created Date</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Car?.Brand ?? "Not Available")</td>
                <td>@item.CreatedDate.ToString("g")</td>
                <td>@(item.CreatedUser?.Name ?? "Unknown")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>