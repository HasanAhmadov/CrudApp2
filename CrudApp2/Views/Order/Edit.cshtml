@model CrudApp2.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CreatedUserId" class="control-label"></label>
                <select asp-for="CreatedUserId" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="CreatedUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}